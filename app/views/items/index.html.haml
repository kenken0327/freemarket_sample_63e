= render 'shared/header'

.main
  .main-box
    .main-box__ad
    .main-box__show
      %h2.big-heading
        全ての商品一覧
      .main-box__show__frame
        %ul.f-list
          %li.f-list__ca
            =link_to "#", class: "choice1" do
              子供服
    .main-box__items
      .main-box__items__box
        .main-box__items__box__heading
          .main-box__items__box__heading__text
            新着アイテム
          .main-box__items__box__heading__more
            =link_to "#", class: "more" do
              もっと見る
        .main-box__items__box__frame
        -@items.each do |item|
          %ul.i-list
            %li.item
              .item-box
                =link_to "#", class: "field" do
                  %figure.card
                    %figcaption
                      %span
                        子供服  スウェット生地  コスプレや室内着  お出かけにも
                    .style
                      %span.price
                        ¥
                        1400
                      = image_tag "/images/cloth.png", alt: "商品画像", class: "product"
            %li.item
              .item-box
                =link_to "#", class: "field" do
                  %figure.card
                    %figcaption
                      %span
                        = item.name
                    .style
                      %span.price
                        ¥
                        1400
                      = image_tag item.image.url, alt:"商品画像です"
.exhibit
  =link_to "/items/new", class: "button" do
    .button-mark
      .button-mark__text
        出品
      = icon "fas", "camera", class: "camera"

%aside.adv
  .adv-box
    .adv-box__body
      .adv-box__body__left
        .adv-box__body__left__text1
          スマホで簡単フリマアプリ
        .adv-box__body__left__text2
          今すぐ無料ダウンロード！
        .adv-box__body__left__icons
          = image_tag "/images/SVG/logo_red.svg", alt: "Merucari", class: "main-icon"
          =link_to "#", class: "AppStore" do
            = image_tag "/images/SVG/Download_on_the_App_Store_Badge_US-UK_RGB_blk_092917.svg", alt: "img", class: "badge1"
          =link_to "#", class: "GooglePlay" do
            = image_tag "/images/google-play-badge.png", alt: "img", class: "badge2"
      %figure.phone-img
        = image_tag "/images/03.png", alt: "img", class: "phone", height: "250", width: "150"

