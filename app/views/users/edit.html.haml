= render 'shared/header2'

%nav.location
  %ul.location-pre
    %li{itemscope: true, itemtype: "#"}
      =link_to "#", itemprop: "url" do
        %span{itemprop: "title"}
          Fマーケット
    = icon "fas", "chevron-right", class: "chevron-right_t"
    %li{itemscope: true, itemtype: "#"}
      =link_to "#", itemprop: "url" do
        %span{itemprop: "title"}
          マイページ
    = icon "fas", "chevron-right", class: "chevron-right_t"
    %li{itemscope: true, itemtype: "#"}
      %span{itemprop: "title"}
        プロフィール

%main.major
  .r-content
    .profile-container
      %h2.profile-head
        プロフィール
      = form_with model: @user, local: true do|f|
        .set-nickname
          %figure
            = image_tag "/images/user.png", alt: "Unknown", class: "user-image__p"
          = f.text_field :nickname, value: current_user.nickname, placeholder: "名前", class: "input-default"
        .set-text
          = f.text_area :self_info, class: "textarea-default", placeholder: "例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪"
          = f.submit '変更する', class: "profile-button"

